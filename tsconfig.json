{
    "compilerOptions": {
        "outDir": "./app-dist",
        "moduleResolution": "node",
        "module": "CommonJS",
        "allowJs": true,
        "target": "ES2020",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./app/**/*",
        "app.ts",
        "appSSR.ts",
        "server.ts",
        "dev-server.ts",
        "dev-server-ssr.ts",
        "./test/backend/**/*"
    ]
}